unit uClienteDAO;

interface

uses
  uCliente, FireDAC.Comp.Client;

type
  TClienteDAO = class
  private
    FConn: TFDConnection;
  public
    constructor Create(AConn: TFDConnection);
    function ObterPorCodigo(ACodigo: Integer): TCliente;
  end;

implementation

uses System.SysUtils;

constructor TClienteDAO.Create(AConn: TFDConnection);
begin
  FConn := AConn;
end;

function TClienteDAO.ObterPorCodigo(ACodigo: Integer): TCliente;
var
  Q: TFDQuery;
  C: TCliente;
begin
  Result := nil;
  Q := TFDQuery.Create(nil);
  try
    Q.Connection := FConn;
    Q.SQL.Text := 'SELECT Codigo, Nome, Cidade, UF FROM Clientes WHERE Codigo = :p';
    Q.ParamByName('p').AsInteger := ACodigo;
    Q.Open;
    if not Q.IsEmpty then
    begin
      C := TCliente.Create;
      C.Codigo := Q.FieldByName('Codigo').AsInteger;
      C.Nome := Q.FieldByName('Nome').AsString;
      C.Cidade := Q.FieldByName('Cidade').AsString;
      C.UF := Q.FieldByName('UF').AsString;
      Result := C;
    end;
  finally
    Q.Free;
  end;
end;

end.
